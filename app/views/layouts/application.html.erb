<!DOCTYPE html>
<html>
  <head>
    <title>MyFit</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <% if user_signed_in? %>
      <li class="nav-item">
        <%= link_to 'Welcome! Work hard and crush your goals!', '#', class: 'nav-link' %>
        <%= link_to "Sign Out", destroy_user_session_path, method: :delete %>
      </li>
    <% end %>
  	
  	<% if notice.present?%>
  		<p class="alert alert-info"><%= notice %></p>
  	<% end %>

  	<% if alert.present?%>
  		<p class="alert alert-danger"><%= alert %></p>
  	<% end %>

    <%= yield %>
  </body>
</html>
